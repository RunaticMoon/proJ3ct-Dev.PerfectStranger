<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center_horizontal|bottom">
        <shape android:shape="oval" >
            <solid android:color="#FFD700"/>
            <size android:width="75dp" android:height="75dp"/>
        </shape>
    </item>
    <item android:gravity="center_horizontal|bottom"
        android:bottom="30dp">
       <shape android:shape="rectangle" android:useLevel="false">
           <solid android:color="#FFFFE0"/>
           <size android:height="45dp" android:width="120dp"/>
           <corners android:topLeftRadius="50dp" android:topRightRadius="50dp"/>
     </shape>
    </item>
    <item android:gravity="center_horizontal|bottom"
        android:bottom="65dp">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="#FFFFE0"/>
            <size android:height="25dp" android:width="60dp"/>
            <corners android:topLeftRadius="55dp" android:topRightRadius="55dp"/>
        </shape>
    </item>
</layer-list>